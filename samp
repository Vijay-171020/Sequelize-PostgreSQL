üîê middleware/auth.js
js
Copy
Edit
const jwt = require('jsonwebtoken');
const { User } = require('../models');
module.exports = async (req, res, next) => {
  const auth = req.headers.authorization;
  if (!auth) return res.status(401).json({ error: 'No token' });
  const token = auth.split(' ')[1];
  try {
    const payload = jwt.verify(token, process.env.JWT_SECRET);
    req.user = await User.findByPk(payload.userId);
    if (!req.user) throw new Error();
    next();
  } catch {
    res.status(401).json({ error: 'Invalid token' });
  }
};
‚úÖ middleware/validation.js
js
Copy
Edit
const { validationResult } = require('express-validator');
module.exports = (req, res, next) => {
  const errors = validationResult(req);
  if (!errors.isEmpty())
    return res.status(400).json({ errors: errors.array() });
  next();
};
üîê routes/auth.js
js
Copy
Edit
const express = require('express');
const { body } = require('express-validator');
const jwt = require('jsonwebtoken');
const { User } = require('../models');
const validate = require('../middleware/validation');
const router = express.Router();

router.post('/register',
  body('name').notEmpty(),
  body('email').isEmail(),
  body('password').isLength({ min: 6 }),
  validate,
  async (req, res) => {
    const user = await User.create(req.body);
    const token = jwt.sign({ userId: user.id }, process.env.JWT_SECRET);
    res.json({ token, user: { id: user.id, name: user.name, email: user.email } });
  });

router.post('/login',
  body('email').isEmail(),
  body('password').notEmpty(),
  validate,
  async (req, res) => {
    const user = await User.findOne({ where: { email: req.body.email } });
    if (!user || !(await user.validatePassword(req.body.password)))
      return res.status(400).json({ error: 'Invalid credentials' });
    const token = jwt.sign({ userId: user.id }, process.env.JWT_SECRET);
    res.json({ token, user: { id: user.id, name: user.name, email: user.email } });
  });

module.exports = router;
üë• routes/users.js
js
Copy
Edit
const express = require('express');
const { body } = require('express-validator');
const { User, Address, Course } = require('../models');
const auth = require('../middleware/auth');
const validate = require('../middleware/validation');
const router = express.Router();

router.get('/', auth, async (req, res) =>
  res.json(await User.findAll({ include: [Address, Course] }))
);

router.get('/:id', auth, async (req, res) => {
  const u = await User.findByPk(req.params.id, { include: [Address, Course] });
  if (!u) return res.status(404).json({ error: 'Not found' });
  res.json(u);
});

router.put('/:id', auth,
  body('name').optional().notEmpty(),
  body('email').optional().isEmail(),
  validate,
  async (req, res) => {
    const u = await User.findByPk(req.params.id);
    if (!u) return res.status(404).json({ error: 'Not found' });
    await u.update(req.body);
    res.json(u);
  });

router.delete('/:id', auth, async (req, res) => {
  const u = await User.findByPk(req.params.id);
  if (!u) return res.status(404).json({ error: 'Not found' });
  await u.destroy();
  res.sendStatus(204);
});

// Address sub-route
router.post('/:id/address', auth,
  body('street').notEmpty(),
  body('city').notEmpty(),
  body('state').notEmpty(),
  body('zip').notEmpty(),
  validate,
  async (req, res) => {
    const u = await User.findByPk(req.params.id);
    if (!u) return res.status(404).json({ error: 'Not found' });
    const addr = await Address.upsert({ ...req.body, UserId: u.id });
    res.json(addr);
  });

// Enroll/unenroll courses
router.post('/:id/enroll',
  auth,
  body('courseIds').isArray({ min: 1 }),
  validate,
  async (req, res) => {
    const u = await User.findByPk(req.params.id);
    if (!u) return res.status(404).json({ error: 'Not found' });
    const courses = await Course.findAll({ where: { id: req.body.courseIds } });
    await u.setCourses(courses);
    res.json(await u.getCourses());
  });

module.exports = router;
üìù routes/posts.js
js
Copy
Edit
const express = require('express');
const { body } = require('express-validator');
const { Post } = require('../models');
const auth = require('../middleware/auth');
const validate = require('../middleware/validation');
const router = express.Router();

router.post('/', auth,
  body('title').notEmpty(),
  body('content').notEmpty(),
  validate,
  async (req, res) => {
    const post = await Post.create({ ...req.body, UserId: req.user.id });
    res.json(post);
  });

router.get('/', auth, async (req, res) =>
  res.json(await Post.findAll({ include: ['User'] }))
);

router.get('/:id', auth, async (req, res) => {
  const p = await Post.findByPk(req.params.id);
  if (!p) return res.sendStatus(404);
  res.json(p);
});

router.put('/:id', auth,
  body('title').optional().notEmpty(),
  body('content').optional().notEmpty(),
  validate,
  async (req, res) => {
    const p = await Post.findByPk(req.params.id);
    if (!p) return res.sendStatus(404);
    await p.update(req.body);
    res.json(p);
  });

router.delete('/:id', auth, async (req, res) => {
  const p = await Post.findByPk(req.params.id);
  if (!p) return res.sendStatus(204);
});

module.exports = router;
üìñ routes/courses.js
js
Copy
Edit
const express = require('express');
const { Course } = require('../models');
const auth = require('../middleware/auth');
const { body } = require('express-validator');
const validate = require('../middleware/validation');
const router = express.Router();

router.get('/', auth, async (req, res) =>
  res.json(await Course.findAll())
);

router.post('/', auth,
  body('name').notEmpty(),
  validate,
  async (req, res) => {
    const c = await Course.create(req.body);
    res.json(c);
  });

router.get('/:id', auth, async (req, res) => {
  const c = await Course.findByPk(req.params.id);
  if (!c) return res.status(404).json({ error: 'Not found' });
  res.json(c);
});

router.put('/:id', auth,
  body('name').optional().notEmpty(),
  validate,
  async (req, res) => {
    const c = await Course.findByPk(req.params.id);
    if (!c) return res.status(404).json({ error: 'Not found' });
    await c.update(req.body);
    res.json(c);
  });

router.delete('/:id', auth, async (req, res) => {
  const c = await Course.findByPk(req.params.id);
  if (!c) return res.sendStatus(204);
});

module.exports = router;
üß© app.js
js
Copy
Edit
const express = require('express');
require('dotenv').config();
const { sequelize, Course } = require('./models');
const authRouter = require('./routes/auth');
const usersRouter = require('./routes/users');
const postsRouter = require('./routes/posts');
const coursesRouter = require('./routes/courses');
const app = express();

app.use(express.json());
app.use('/auth', authRouter);
app.use('/users', usersRouter);
app.use('/posts', postsRouter);
app.use('/courses', coursesRouter);

// Sync and seed default courses
async function init() {
  await sequelize.sync({ alter: true });
  const names = ['Python', 'Java', 'C/Cpp', '.NET'];
  for (const name of names) {
    await Course.findOrCreate({ where: { name } });
  }
}
init();

module.exports = app;
